.container
    h1 {{ place.title }}
    .row
        .col-md-6
            h3(ng-show="place.featured") Featured
            h3 Published on {{ place.published | date }}
        
        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in place.tags") {{tag}}
