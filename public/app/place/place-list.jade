.container
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Search")
            .form-group
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
    table.table.table-hover.table-stripped.table-condensed
        thead
            tr
                th Title
                th Publish Date
        tbody
            tr(ng-repeat="place in places | filter:searchText | orderBy: sortOrder")
                td 
                    a(href="/places/{{ place._id }}") {{ place.title }}
                td {{ place.published | date }}
